{
  "functions": {
    "api/proxy.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/proxy"
    },
    {
      "source": "/oauth2/:path*",
      "destination": "/api/proxy"
    },
    {
      "source": "/auth/:path*",
      "destination": "/api/proxy"
    }
  ]
}