{
  "functions": {
    "api/proxy.js": {
      "maxDuration": 30
    },
    "api/test.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/test",
      "destination": "/api/test"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/proxy"
    },
    {
      "source": "/oauth2/:path*",
      "destination": "/api/proxy"
    },
    {
      "source": "/auth/:path*",
      "destination": "/api/proxy"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/api/proxy"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}